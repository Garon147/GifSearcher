<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/gif_image"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <ProgressBar
            android:id="@+id/progress_bar_gif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gif_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="ABCD"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/gif_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="ABCDEF"/>

        <TextView
            android:id="@+id/gif_rating"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="ABCD"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/gif_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AHSDAKSDKJAHSJKDJKASJKDAJSHDAHJKSHDJKAHJKHDKJAHSJKDKALDA;KSD;LASKLDJKAJDKASKLJDKLJASD"
            android:textStyle="normal"
            android:textSize="14sp"/>

    </LinearLayout>



</LinearLayout>


